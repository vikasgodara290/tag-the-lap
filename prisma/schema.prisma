generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Task {
  id            Int      @id @default(autoincrement())
  task          String   
  category      String
  startTime     DateTime
  createdAt     DateTime @default(now())
}

model RecordTime {
  userId      Int      @id @default(autoincrement())
  startTime   DateTime
  stopTime    DateTime
}